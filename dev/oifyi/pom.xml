<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.cergy.eisti</groupId>
    <artifactId>oifyi</artifactId>
    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>oifyi Maven Webapp</name>
    <description>Projet ING2 du premier semestre.</description>
    <inceptionYear>2016</inceptionYear>
    <url>http://maven.apache.org</url>


    <developers>
        <developer>
            <name>Erwan Le Batard--Polès</name>
            <email>lebatardpo@eisti.eu</email>
        </developer>
    </developers>


    <dependencies>
        <!--Hibernate-->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>5.2.3.Final</version>
        </dependency>
        <!--Hibernate end-->
    </dependencies>


    <build>
        <finalName>oifyi</finalName>

        <plugins>
            <!--Pour enlever un warning à la compilation-->
            <plugin>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>2.9</version>
            </plugin>

            <!--Flyway-->
            <plugin>
                <groupId>org.flywaydb</groupId>
                <artifactId>flyway-maven-plugin</artifactId>
                <version>4.0.3</version>
                <configuration>
                    <user>oifyi</user>
                    <password>oifyi</password>
                    <url>jdbc:oracle:thin:@127.0.0.1:1521:XE</url>
                    <placeholders>
                        <keyABC>valueXYZ</keyABC>
                        <otherplaceholder>value123</otherplaceholder>
                    </placeholders>
                </configuration>
                <!--Driver Oracle-->
                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>ojdbc14</artifactId>
                        <version>10.2.0.3.0</version>
                    </dependency>
                </dependencies>
                <!--Driver Oracle end-->
                <executions>
                    <execution>
                        <goals>
                            <goal>migrate</goal>
                            <goal>info</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!--Flyway end-->
        </plugins>
    </build>


    <distributionManagement>
        <!--Pour enlever une erreur à la compilation-->
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>corp1</id>
            <name>Corporate Repository</name>
            <url>file:./target/repositoryDeploy</url>
            <layout>default</layout>
        </repository>
    </distributionManagement>
</project>
