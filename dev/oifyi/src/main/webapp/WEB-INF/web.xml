<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Archetype Created Web Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <jsp-property-group>
            <description>Config. de l'encodage des fichiers</description>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    
    <context-param>
        <param-name>file-upload</param-name>
        <param-value>/home/eisti/data_oifyi/</param-value>
    </context-param>

    <servlet>
        <servlet-name>connexion</servlet-name>
        <servlet-class>servlets.Connexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>connexion</servlet-name>
        <url-pattern>/oifyi/connexion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deconnexion</servlet-name>
        <servlet-class>servlets.Deconnexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deconnexion</servlet-name>
        <url-pattern>/oifyi/deconnexion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_client</servlet-name>
        <servlet-class>servlets.UpdateClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_client</servlet-name>
        <url-pattern>/update_client</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_absence</servlet-name>
        <servlet-class>servlets.UpdateAbsence</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_absence</servlet-name>
        <url-pattern>/oifyi/update_absence</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_consultant</servlet-name>
        <servlet-class>servlets.UpdateConsultant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_consultant</servlet-name>
        <url-pattern>/oifyi/update_consultant</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_consultant_role</servlet-name>
        <servlet-class>servlets.UpdateConsultant_Role</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_consultant_role</servlet-name>
        <url-pattern>/oifyi/update_consultant_role</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_mission</servlet-name>
        <servlet-class>servlets.UpdateMission</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_mission</servlet-name>
        <url-pattern>/oifyi/update_mission</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_mission_consultant</servlet-name>
        <servlet-class>servlets.UpdateMission_Consultant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_mission_consultant</servlet-name>
        <url-pattern>/oifyi/update_mission_consultant</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>saisieCra</servlet-name>
        <servlet-class>servlets.SaisieCra</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saisieCra</servlet-name>
        <url-pattern>/oifyi/saisieCra</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>supprimerConsultant</servlet-name>
        <servlet-class>servlets.SupprimerConsultant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>supprimerConsultant</servlet-name>
        <url-pattern>/oifyi/supprimerConsultant</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ValiderCra</servlet-name>
        <servlet-class>servlets.ValiderCra</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValiderCra</servlet-name>
        <url-pattern>/oifyi/ValiderCra</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProfil</servlet-name>
        <servlet-class>servlets.UpdateProfil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProfil</servlet-name>
        <url-pattern>/oifyi/update_profil_consultant</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadCV</servlet-name>
        <servlet-class>servlets.UploadCV</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadCV</servlet-name>
        <url-pattern>/oifyi/upload_cv</url-pattern>
    </servlet-mapping>
</web-app>
